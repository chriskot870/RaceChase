<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ui.TimingFragment">

    <FrameLayout
        android:id="@+id/layout_contestants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_contestants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Contestants">

        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_timing_frames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_timer1_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <Chronometer
                    android:id="@+id/lap_clock1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp">

                </Chronometer>

                <TextView
                    android:id="@+id/lap_report1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Lap Report 1"
                    android:textAlignment="center">

                </TextView>

                <Button
                    android:id="@+id/lap_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Start\n1">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lap_difference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lap Diff"
                    android:textAlignment="center"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:orientation="vertical"
                    android:text="Lap Gain"
                    android:textAlignment="center">

                </TextView>

                <Button
                    android:id="@+id/simultaneous_start_stop_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Start\nBoth"
                    android:textAlignment="center">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_timer2_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <Chronometer
                    android:id="@+id/lap_clock2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp">

                </Chronometer>

                <TextView
                    android:id="@+id/lap_report2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Lap Report 2"
                    android:textAlignment="center">

                </TextView>

                <Button
                    android:id="@+id/lap_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Start\n2">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>